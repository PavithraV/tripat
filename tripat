#include <stdio.h>
 
long fact(int);
 
int main()
{
    int i, rows, c;
    printf("Enter the number of rows \n");
    scanf("%d",&rows);
    for (i = 0; i < rows; i++)
    {
         for (c = 0 ; c <= i; c++)
         printf("%ld ",factorial(i)/(factorial(c)*factorial(i-c)));
         printf("\n");
    }
 
    return 0;
}
long fact(int n)
{
   int a;
   long result = 1;
   for (a = 1; a <= n; a++)
   result = result*a;
   return result;
}
